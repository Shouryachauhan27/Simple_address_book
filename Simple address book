#include <stdio.h>
#include <string.h>

#define MAX 100

// Structure to store contact information
struct Contact {
    char name[50];
    char phone[15];
};

// Function declarations
void addContact(struct Contact contacts[], int *count);
void displayContacts(struct Contact contacts[], int count);
void searchContact(struct Contact contacts[], int count);

int main() {
    struct Contact contacts[MAX];
    int count = 0;
    int choice;

    while (1) {
        printf("\n--- Address Book Menu ---\n");
        printf("1. Add Contact\n");
        printf("2. Display All Contacts\n");
        printf("3. Search Contact\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                addContact(contacts, &count);
                break;
            case 2:
                displayContacts(contacts, count);
                break;
            case 3:
                searchContact(contacts, count);
                break;
            case 4:
                printf("Exiting address book...\n");
                return 0;
            default:
                printf("Invalid choice, please try again.\n");
        }
    }
}

void addContact(struct Contact contacts[], int *count) {
    if (*count >= MAX) {
        printf("Address book is full!\n");
        return;
    }

    printf("Enter name: ");
    scanf("%s", contacts[*count].name);
    printf("Enter phone number: ");
    scanf("%s", contacts[*count].phone);

    (*count)++;
    printf("Contact added successfully!\n");
}

void displayContacts(struct Contact contacts[], int count) {
    if (count == 0) {
        printf("No contacts to display.\n");
        return;
    }

    printf("\n--- All Contacts ---\n");
    for (int i = 0; i < count; i++) {
        printf("Name: %s, Phone: %s\n", contacts[i].name, contacts[i].phone);
    }
}

void searchContact(struct Contact contacts[], int count) {
    char name[50];
    printf("Enter name to search: ");
    scanf("%s", name);

    for (int i = 0; i < count; i++) {
        if (strcmp(contacts[i].name, name) == 0) {
            printf("Contact found: %s - %s\n", contacts[i].name, contacts[i].phone);
            return;
        }
    }
    printf("Contact not found.\n");
}
